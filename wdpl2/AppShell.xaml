<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Wdpl2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Wdpl2.Views">

    <TabBar>
        <Tab Title="Seasons" Icon="calendar.png">
            <ShellContent Title="Seasons" ContentTemplate="{DataTemplate views:SeasonsPage}" />
        </Tab>

        <Tab Title="Divisions">
            <ShellContent Title="Divisions" ContentTemplate="{DataTemplate views:DivisionsPage}" />
        </Tab>

        <Tab Title="Teams">
            <ShellContent Title="Teams" ContentTemplate="{DataTemplate views:TeamsPage}" />
        </Tab>

        <Tab Title="Players">
            <ShellContent Title="Players" ContentTemplate="{DataTemplate views:PlayersPage}" />
        </Tab>

        <Tab Title="Venues">
            <ShellContent Title="Venues" ContentTemplate="{DataTemplate views:VenuesPage}" />
        </Tab>

        <Tab Title="Fixtures" Icon="calendar.png">
            <ShellContent Title="Fixtures" ContentTemplate="{DataTemplate views:FixturesPage}" />
        </Tab>

        <Tab Title="Competitions">
            <ShellContent Title="Competitions" ContentTemplate="{DataTemplate views:CompetitionsPage}" />
        </Tab>

        <Tab Title="Tables" Icon="stats.png">
            <ShellContent Title="Tables" ContentTemplate="{DataTemplate views:LeagueTablesPage}" />
        </Tab>

        <Tab Title="Career Stats" Icon="stats.png">
            <ShellContent Title="Career Stats" ContentTemplate="{DataTemplate views:CareerStatsPage}" />
        </Tab>

        <Tab Title="Season Awards" Icon="stats.png">
            <ShellContent Title="Season Awards" ContentTemplate="{DataTemplate views:SeasonAwardsPage}" />
        </Tab>

        <Tab Title="Match Day" Icon="calendar.png">
            <ShellContent Title="Match Day" ContentTemplate="{DataTemplate views:MatchDayDashboardPage}" />
        </Tab>

        <Tab Title="Frame Stats" Icon="stats.png">
            <ShellContent Title="Frame Stats" ContentTemplate="{DataTemplate views:FrameStatsPage}" />
        </Tab>

        <Tab Title="Team Analytics" Icon="stats.png">
            <ShellContent Title="Team Analytics" ContentTemplate="{DataTemplate views:TeamAnalyticsPage}" />
        </Tab>

        <Tab Title="What If" Icon="stats.png">
            <ShellContent Title="What If" ContentTemplate="{DataTemplate views:WhatIfSimulatorPage}" />
        </Tab>

        <Tab Title="Achievements" Icon="stats.png">
            <ShellContent Title="Achievements" ContentTemplate="{DataTemplate views:AchievementsPage}" />
        </Tab>

        <Tab Title="Historical Import" Icon="stats.png">
            <ShellContent Title="Historical Import" ContentTemplate="{DataTemplate views:HistoricalImportPage}" />
        </Tab>

        <Tab Title="Settings">
            <ShellContent Title="Settings" ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>

    <!-- Add this in your ShellContent items -->
    <ShellContent
        Title="Import Data"
        ContentTemplate="{DataTemplate views:ImportPage}"
        Route="import"
        Icon="{FontImageSource FontFamily='MaterialIcons', Glyph='&#xe2c6;', Size=24}" />
</Shell>
