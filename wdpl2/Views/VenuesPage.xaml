<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Wdpl2.Views.VenuesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrls="clr-namespace:Wdpl2.Views.Controls"
    Title="Venues">

    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,*" Padding="12" ColumnSpacing="12" RowSpacing="12">
        
        <!-- Header with Burger Menu Button -->
        <Grid Grid.ColumnSpan="2" ColumnDefinitions="Auto,*">
            <Button 
                x:Name="BurgerMenuBtn"
                Text="â˜°"
                FontSize="24"
                WidthRequest="50"
                HeightRequest="50"
                Padding="0"
                Margin="0,0,12,0"
                BackgroundColor="{StaticResource PrimaryColor}"
                TextColor="White" />
            
            <Label 
                Grid.Column="1"
                Text="Manage Venues" 
                Style="{StaticResource PageTitleStyle}"
                VerticalOptions="Center" />
        </Grid>

        <!-- Flyout Menu Overlay -->
        <Border 
            x:Name="FlyoutOverlay"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            IsVisible="False"
            BackgroundColor="#80000000"
            ZIndex="100">
            <Border.GestureRecognizers>
                <TapGestureRecognizer x:Name="OverlayTap" />
            </Border.GestureRecognizers>
        </Border>

        <!-- Flyout Menu Panel -->
        <Border 
            x:Name="FlyoutPanel"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            HorizontalOptions="Start"
            WidthRequest="400"
            IsVisible="False"
            BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}"
            Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
            StrokeThickness="1"
            StrokeShape="RoundRectangle 0,12,12,0"
            Padding="{StaticResource LargePadding}"
            ZIndex="101">
            <ScrollView>
                <VerticalStackLayout Spacing="{StaticResource MediumSpacing}">
                    
                    <HorizontalStackLayout Spacing="{StaticResource StandardSpacing}">
                        <Label Text="Controls" Style="{StaticResource SectionHeaderStyle}" VerticalOptions="Center" Margin="0" />
                        <Button 
                            x:Name="CloseFlyoutBtn"
                            Text="âœ•"
                            FontSize="18"
                            WidthRequest="40"
                            HeightRequest="40"
                            Padding="0"
                            HorizontalOptions="EndAndExpand"
                            Style="{StaticResource DangerButtonStyle}"
                            CornerRadius="20" />
                    </HorizontalStackLayout>
                    
                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}" />

                    <Label Text="Venue Details" Style="{StaticResource SubsectionHeaderStyle}" Margin="0" />

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Venue Name" Style="{StaticResource FieldLabelStyle}" Margin="0,0,0,4" />
                        <Entry x:Name="VenueNameEntry" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Address" Style="{StaticResource FieldLabelStyle}" Margin="0,0,0,4" />
                        <Entry x:Name="AddressEntry" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Notes" Style="{StaticResource FieldLabelStyle}" Margin="0,0,0,4" />
                        <Entry x:Name="NotesEntry" />
                    </VerticalStackLayout>

                    <!-- Tables Section -->
                    <Label Text="Tables" Style="{StaticResource SubsectionHeaderStyle}" Margin="0,12,0,4" />
                    
                    <Border
                        HeightRequest="150"
                        StrokeShape="RoundRectangle 8"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                        StrokeThickness="1"
                        BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray800}}">
                        <CollectionView x:Name="TablesList" VerticalScrollBarVisibility="Always">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8" ColumnDefinitions="*,Auto">
                                        <Label Text="{Binding Label}" VerticalOptions="Center" FontSize="14" />
                                        <Label Grid.Column="1" Text="{Binding MaxTeams, StringFormat='Max: {0}'}" 
                                               Style="{StaticResource CaptionStyle}" 
                                               Margin="0,0,8,0" 
                                               VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Border>

                    <HorizontalStackLayout Spacing="{StaticResource StandardSpacing}">
                        <Entry x:Name="NewTableEntry" Placeholder="New table name..." HorizontalOptions="FillAndExpand" />
                        <Button x:Name="AddTableBtn" Text="+ Add Table" />
                    </HorizontalStackLayout>

                    <Button x:Name="RemoveTableBtn" Text="Remove Selected Table" Style="{StaticResource DangerButtonStyle}" />

                    <Label Text="Actions" Style="{StaticResource SubsectionHeaderStyle}" Margin="0,8,0,0" />

                    <HorizontalStackLayout Spacing="{StaticResource StandardSpacing}">
                        <Button x:Name="AddVenueBtn" Text="+ Add" />
                        <Button x:Name="UpdateVenueBtn" Text="Update" />
                        <Button x:Name="DeleteVenueBtn" Text="Delete" Style="{StaticResource DangerButtonStyle}" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="{StaticResource StandardSpacing}">
                        <Button x:Name="MultiSelectBtn" Text="Multi-Select OFF" BackgroundColor="{StaticResource Gray500}" TextColor="White" />
                        <Button x:Name="BulkDeleteBtn" Text="Delete Selected" Style="{StaticResource DangerButtonStyle}" IsVisible="False" />
                    </HorizontalStackLayout>

                    <Label Text="Data Management" Style="{StaticResource SubsectionHeaderStyle}" Margin="0,8,0,0" />

                    <HorizontalStackLayout Spacing="{StaticResource StandardSpacing}">
                        <Button x:Name="SaveBtn" Text="Save" />
                        <Button x:Name="ReloadBtn" Text="Reload" />
                    </HorizontalStackLayout>

                    <Button x:Name="ExportBtn" Text="Export CSV" />

                    <ctrls:CsvImportBox x:Name="VenuesImport" Title="Import Venues (.csv)" />

                    <Label x:Name="StatusLbl" Text="" Style="{StaticResource StatusTextStyle}" />
                    
                </VerticalStackLayout>
            </ScrollView>
        </Border>

        <!-- Left: search + list -->
        <Border 
            Grid.Row="1" 
            StrokeShape="RoundRectangle 12" 
            Padding="{StaticResource MediumPadding}"
            BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1A1A1A}"
            Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
            StrokeThickness="1">
            <Grid RowDefinitions="Auto,*" RowSpacing="{StaticResource StandardSpacing}">
                <Entry x:Name="SearchEntry" Placeholder="Search venues..." />
                
                <CollectionView 
                    x:Name="VenuesList" 
                    Grid.Row="1"
                    SelectionMode="Single"
                    VerticalScrollBarVisibility="Always">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="{StaticResource StandardPadding}"
                                Margin="0,0,0,4"
                                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2A2A2A}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 8">
                                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" ColumnSpacing="8" RowSpacing="2">
                                    <Label 
                                        Text="{Binding Name}" 
                                        FontSize="15" 
                                        FontAttributes="Bold"
                                        VerticalOptions="Center" />
                                    <Border
                                        Grid.Column="1"
                                        BackgroundColor="{StaticResource PrimaryColor}"
                                        StrokeThickness="0"
                                        Padding="8,2"
                                        StrokeShape="RoundRectangle 10"
                                        VerticalOptions="Center">
                                        <Label 
                                            Text="{Binding Tables.Count, StringFormat='{0} tables'}" 
                                            FontSize="11"
                                            TextColor="White" />
                                    </Border>
                                    <Label 
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        Text="{Binding Address}" 
                                        Style="{StaticResource CaptionStyle}"
                                        LineBreakMode="TailTruncation" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Border>

        <!-- Right: Venue Details Panel - Enhanced -->
        <Border 
            Grid.Row="1" 
            Grid.Column="1"
            StrokeShape="RoundRectangle 12" 
            Padding="{StaticResource MediumPadding}"
            BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1A1A1A}"
            Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
            StrokeThickness="1">
            <ScrollView>
                <VerticalStackLayout Spacing="{StaticResource MediumSpacing}">
                    
                    <!-- Empty State -->
                    <VerticalStackLayout 
                        x:Name="EmptyStatePanel"
                        Spacing="16"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="40"
                        IsVisible="True">
                        <Label 
                            Text="ðŸ¢"
                            FontSize="48"
                            HorizontalOptions="Center" />
                        <Label 
                            Text="Select a venue"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="{StaticResource Gray500}"
                            HorizontalOptions="Center" />
                        <Label 
                            Text="Click a venue from the list to view details, edit information, or manage tables"
                            Style="{StaticResource CaptionStyle}"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            MaximumWidthRequest="300" />
                    </VerticalStackLayout>

                    <!-- Venue Info Panel (initially hidden) -->
                    <VerticalStackLayout x:Name="VenueInfoPanel" IsVisible="False" Spacing="16">
                        
                        <!-- Header with venue name -->
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Spacing="4">
                                <Label x:Name="SelectedVenueName" FontSize="22" FontAttributes="Bold" />
                                <Label x:Name="SelectedVenueAddress" Style="{StaticResource CaptionStyle}" />
                            </VerticalStackLayout>
                            <Border
                                Grid.Column="1"
                                BackgroundColor="{StaticResource PrimaryColor}"
                                StrokeThickness="0"
                                Padding="12,6"
                                StrokeShape="RoundRectangle 16"
                                VerticalOptions="Start">
                                <Label 
                                    x:Name="SelectedVenueTableCount"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    TextColor="White" />
                            </Border>
                        </Grid>

                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                        
                        <!-- Stats Cards -->
                        <Label Text="STATISTICS" Style="{StaticResource CaptionStyle}" FontAttributes="Bold" />
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="12">
                            
                            <!-- Teams Card -->
                            <Border 
                                BackgroundColor="{AppThemeBinding Light=#EFF6FF, Dark=#1E3A5F}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                Padding="16">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="ðŸ†" FontSize="24" />
                                    <Label x:Name="VenueTeamCount" FontSize="28" FontAttributes="Bold" TextColor="{StaticResource PrimaryColor}" />
                                    <Label Text="Teams" Style="{StaticResource CaptionStyle}" />
                                </VerticalStackLayout>
                            </Border>
                            
                            <!-- Tables Card -->
                            <Border 
                                Grid.Column="1"
                                BackgroundColor="{AppThemeBinding Light=#F0FDF4, Dark=#14532D}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                Padding="16">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="ðŸŽ±" FontSize="24" />
                                    <Label x:Name="VenueTableCountStat" FontSize="28" FontAttributes="Bold" TextColor="#16A34A" />
                                    <Label Text="Tables" Style="{StaticResource CaptionStyle}" />
                                </VerticalStackLayout>
                            </Border>
                            
                            <!-- Fixtures Card -->
                            <Border 
                                Grid.Row="1"
                                BackgroundColor="{AppThemeBinding Light=#FEF3C7, Dark=#713F12}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                Padding="16">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="ðŸ“…" FontSize="24" />
                                    <Label x:Name="VenueFixtureCount" FontSize="28" FontAttributes="Bold" TextColor="#CA8A04" />
                                    <Label Text="Fixtures" Style="{StaticResource CaptionStyle}" />
                                </VerticalStackLayout>
                            </Border>
                            
                            <!-- Capacity Card -->
                            <Border 
                                Grid.Row="1"
                                Grid.Column="1"
                                BackgroundColor="{AppThemeBinding Light=#FCE7F3, Dark=#831843}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                Padding="16">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="ðŸ‘¥" FontSize="24" />
                                    <Label x:Name="VenueCapacity" FontSize="28" FontAttributes="Bold" TextColor="#DB2777" />
                                    <Label Text="Max Teams" Style="{StaticResource CaptionStyle}" />
                                </VerticalStackLayout>
                            </Border>
                        </Grid>
                        
                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                        
                        <!-- Tables List -->
                        <Label Text="TABLES AT THIS VENUE" Style="{StaticResource CaptionStyle}" FontAttributes="Bold" />
                        <Border
                            StrokeShape="RoundRectangle 8"
                            Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                            StrokeThickness="1"
                            BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray800}}"
                            HeightRequest="120">
                            <CollectionView x:Name="VenueTablesDisplay" VerticalScrollBarVisibility="Always">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="12,8" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                            <Border
                                                BackgroundColor="{StaticResource PrimaryColor}"
                                                WidthRequest="36"
                                                HeightRequest="36"
                                                StrokeThickness="0"
                                                StrokeShape="RoundRectangle 18">
                                                <Label 
                                                    Text="ðŸŽ±" 
                                                    FontSize="16"
                                                    HorizontalOptions="Center"
                                                    VerticalOptions="Center" />
                                            </Border>
                                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                                <Label Text="{Binding Label}" FontSize="14" FontAttributes="Bold" />
                                                <Label Text="{Binding MaxTeams, StringFormat='Max {0} teams'}" Style="{StaticResource CaptionStyle}" />
                                            </VerticalStackLayout>
                                            <Label 
                                                Grid.Column="2" 
                                                Text="âœ“" 
                                                FontSize="18"
                                                TextColor="#16A34A"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                                <CollectionView.EmptyView>
                                    <VerticalStackLayout Padding="20" HorizontalOptions="Center">
                                        <Label Text="No tables defined" Style="{StaticResource CaptionStyle}" HorizontalOptions="Center" />
                                        <Label Text="Use the menu to add tables" Style="{StaticResource CaptionStyle}" HorizontalOptions="Center" />
                                    </VerticalStackLayout>
                                </CollectionView.EmptyView>
                            </CollectionView>
                        </Border>
                        
                        <!-- Teams at Venue -->
                        <Label Text="TEAMS AT THIS VENUE" Style="{StaticResource CaptionStyle}" FontAttributes="Bold" Margin="0,8,0,0" />
                        <Border
                            StrokeShape="RoundRectangle 8"
                            Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                            StrokeThickness="1"
                            BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray800}}"
                            HeightRequest="100">
                            <CollectionView x:Name="VenueTeamsDisplay" VerticalScrollBarVisibility="Always">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="12,8" ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                            <Border
                                                BackgroundColor="#6366F1"
                                                WidthRequest="36"
                                                HeightRequest="36"
                                                StrokeThickness="0"
                                                StrokeShape="RoundRectangle 18">
                                                <Label 
                                                    Text="ðŸ†" 
                                                    FontSize="16"
                                                    HorizontalOptions="Center"
                                                    VerticalOptions="Center" />
                                            </Border>
                                            <Label Grid.Column="1" Text="{Binding Name}" FontSize="14" VerticalOptions="Center" />
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                                <CollectionView.EmptyView>
                                    <Label Text="No teams assigned to this venue" Style="{StaticResource CaptionStyle}" Padding="20" HorizontalOptions="Center" />
                                </CollectionView.EmptyView>
                            </CollectionView>
                        </Border>
                        
                        <!-- Notes -->
                        <VerticalStackLayout x:Name="NotesSection" IsVisible="False" Spacing="4">
                            <Label Text="NOTES" Style="{StaticResource CaptionStyle}" FontAttributes="Bold" />
                            <Border
                                StrokeShape="RoundRectangle 8"
                                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                                StrokeThickness="1"
                                BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray800}}"
                                Padding="12">
                                <Label x:Name="SelectedVenueNotes" Style="{StaticResource CaptionStyle}" />
                            </Border>
                        </VerticalStackLayout>

                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>
        </Border>
    </Grid>
</ContentPage>
