<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wdpl2.Views.WebsiteBuilder.DivisionsSettingsPage"
             Title="Divisions Page Settings">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <Label Text="Divisions Page" FontSize="24" FontAttributes="Bold" TextColor="#3B82F6"/>
            <Label Text="Customize how divisions are displayed" FontSize="14" TextColor="#6B7280" LineBreakMode="WordWrap"/>
            
            <!-- Layout -->
            <Frame BorderColor="#E5E7EB" Padding="15" CornerRadius="8">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Layout Style" FontSize="14" FontAttributes="Bold"/>
                    <Label Text="Choose how divisions are arranged on the page" FontSize="12" TextColor="#6B7280" LineBreakMode="WordWrap"/>
                    
                    <Picker x:Name="LayoutPicker" Title="Select Layout">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>cards</x:String>
                                <x:String>list</x:String>
                                <x:String>grid</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Display Options -->
            <Frame BorderColor="#E5E7EB" Padding="15" CornerRadius="8">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Display Options" FontSize="14" FontAttributes="Bold"/>
                    <Label Text="Choose what information to show for each division" FontSize="12" TextColor="#6B7280" LineBreakMode="WordWrap"/>
                    
                    <VerticalStackLayout Spacing="6">
                        <Grid ColumnDefinitions="32,*" ColumnSpacing="8">
                            <CheckBox x:Name="ShowTeamCountCheck" IsChecked="True" VerticalOptions="Center"/>
                            <Label Grid.Column="1" Text="Show Team Count" VerticalOptions="Center"/>
                        </Grid>
                        <Grid ColumnDefinitions="32,*" ColumnSpacing="8">
                            <CheckBox x:Name="ShowPlayerCountCheck" IsChecked="True" VerticalOptions="Center"/>
                            <Label Grid.Column="1" Text="Show Player Count" VerticalOptions="Center"/>
                        </Grid>
                        <Grid ColumnDefinitions="32,*" ColumnSpacing="8">
                            <CheckBox x:Name="ShowDescriptionCheck" IsChecked="True" VerticalOptions="Center"/>
                            <Label Grid.Column="1" Text="Show Division Description" VerticalOptions="Center"/>
                        </Grid>
                        <Grid ColumnDefinitions="32,*" ColumnSpacing="8">
                            <CheckBox x:Name="ShowTeamListCheck" IsChecked="True" VerticalOptions="Center"/>
                            <Label Grid.Column="1" Text="Show Team List" VerticalOptions="Center"/>
                        </Grid>
                        <Grid ColumnDefinitions="32,*" ColumnSpacing="8">
                            <CheckBox x:Name="ShowMiniStandingsCheck" IsChecked="False" VerticalOptions="Center"/>
                            <Label Grid.Column="1" Text="Show Mini Standings (Top 5)" VerticalOptions="Center"/>
                        </Grid>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>
            
            <Button Text="Save Changes" 
                    Clicked="OnSaveClicked" 
                    BackgroundColor="#10B981"
                    Margin="0,10,0,0"/>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
