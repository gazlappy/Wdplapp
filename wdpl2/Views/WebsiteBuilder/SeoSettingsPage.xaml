<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wdpl2.Views.WebsiteBuilder.SeoSettingsPage"
             Title="SEO and Advanced">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <Label Text="SEO and Advanced" FontSize="24" FontAttributes="Bold" TextColor="#3B82F6"/>
            <Label Text="Search engine optimization and custom CSS" FontSize="14" TextColor="#6B7280"/>
            
            <Frame BorderColor="#E5E7EB" Padding="15" CornerRadius="8">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Meta Description" FontSize="14" FontAttributes="Bold"/>
                    <Label Text="A brief description for search engines (150-160 characters)" FontSize="12" TextColor="#6B7280"/>
                    <Editor x:Name="MetaDescriptionEditor" 
                            Placeholder="Official website of Your League - standings, fixtures, results..."
                            HeightRequest="80"
                            AutoSize="TextChanges"/>
                    <Label x:Name="MetaCharCount" Text="0 / 160 characters" FontSize="11" TextColor="#9CA3AF"/>
                </VerticalStackLayout>
            </Frame>
            
            <Frame BorderColor="#E5E7EB" Padding="15" CornerRadius="8">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Meta Keywords" FontSize="14" FontAttributes="Bold"/>
                    <Label Text="Keywords separated by commas (optional)" FontSize="12" TextColor="#6B7280"/>
                    <Entry x:Name="MetaKeywordsEntry" Placeholder="pool league, 8-ball, competition, standings"/>
                </VerticalStackLayout>
            </Frame>
            
            <Frame BorderColor="#E5E7EB" Padding="15" CornerRadius="8">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Sitemap" FontSize="14" FontAttributes="Bold"/>
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox x:Name="GenerateSitemapCheck" IsChecked="False"/>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Generate sitemap.xml" VerticalOptions="Center"/>
                            <Label Text="Helps search engines index your site" FontSize="11" TextColor="#6B7280"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
            
            <Frame BorderColor="#E5E7EB" Padding="15" CornerRadius="8">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Custom CSS" FontSize="14" FontAttributes="Bold"/>
                    <Label Text="Add custom styles to override the default theme (advanced)" FontSize="12" TextColor="#6B7280"/>
                    <Editor x:Name="CustomCssEditor" 
                            Placeholder="/* Example: .header { background: #000; } */"
                            HeightRequest="150"
                            FontFamily="Consolas"
                            AutoSize="TextChanges"/>
                    <Label Text="Warning: Invalid CSS may break your website layout" FontSize="11" TextColor="#F59E0B"/>
                </VerticalStackLayout>
            </Frame>
            
            <Button Text="Save Changes" 
                    Clicked="OnSaveClicked" 
                    BackgroundColor="#10B981"
                    Margin="0,10,0,0"/>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
