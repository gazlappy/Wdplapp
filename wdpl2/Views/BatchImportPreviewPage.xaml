<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Wdpl2.Views.BatchImportPreviewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Batch HTML Import Preview">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="{StaticResource PrimaryColor}" 
                Padding="16">
            <VerticalStackLayout Spacing="4">
                <Label Text="Batch HTML Import"
                       TextColor="White"
                       FontAttributes="Bold"
                       FontSize="18" />
                <Label x:Name="SummaryLabel"
                       Text="Files: 0 | Records: 0"
                       TextColor="White"
                       FontSize="14" />
                <Label x:Name="SeasonLabel"
                       Text="Target Season: "
                       TextColor="White"
                       FontSize="14" />
            </VerticalStackLayout>
        </Border>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="12" Spacing="16">

                <!-- Loading Indicator -->
                <Border x:Name="LoadingBorder"
                        IsVisible="False"
                        Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout Padding="20" Spacing="12" HorizontalOptions="Center">
                        <ActivityIndicator IsRunning="True" Color="{StaticResource PrimaryColor}" />
                        <Label x:Name="LoadingLabel" 
                               Text="Loading files..." 
                               HorizontalOptions="Center"
                               FontSize="14" />
                    </VerticalStackLayout>
                </Border>

                <!-- Warnings/Errors -->
                <Border x:Name="AlertsBorder"
                        IsVisible="False"
                        BackgroundColor="{StaticResource WarningColor}"
                        Padding="12"
                        Stroke="{StaticResource WarningColor}"
                        StrokeThickness="0">
                    <VerticalStackLayout x:Name="AlertsStack" Spacing="4" />
                </Border>

                <!-- Season Selection -->
                <Border x:Name="SeasonSelectionBorder" 
                        Style="{StaticResource CardBorderStyle}"
                        IsVisible="False">
                    <VerticalStackLayout Padding="12" Spacing="8">
                        <Label Text="Target Season" FontAttributes="Bold" FontSize="16" />
                        <HorizontalStackLayout Spacing="8">
                            <Picker x:Name="SeasonPicker" 
                                    Title="Select season" 
                                    HorizontalOptions="FillAndExpand"
                                    ItemDisplayBinding="{Binding Name}"
                                    SelectedIndexChanged="OnSeasonChanged"/>
                            <Button Text="+ New"
                                    Clicked="OnCreateSeasonClicked"
                                    BackgroundColor="{StaticResource SuccessColor}"
                                    TextColor="White"
                                    Padding="12,8" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Batch Actions -->
                <Border x:Name="BatchActionsBorder"
                        Style="{StaticResource CardBorderStyle}"
                        IsVisible="False">
                    <HorizontalStackLayout Padding="12" Spacing="8">
                        <Button Text="Select All"
                                Clicked="OnSelectAllFilesClicked"
                                FontSize="12"
                                Padding="8,4"
                                HorizontalOptions="StartAndExpand"/>
                        <Button Text="Deselect All"
                                Clicked="OnDeselectAllFilesClicked"
                                FontSize="12"
                                Padding="8,4"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Files List - Simplified template for performance -->
                <Label x:Name="FilesListLabel" 
                       Text="Files to Import" 
                       FontAttributes="Bold" 
                       FontSize="16"
                       IsVisible="False" />
                
                <CollectionView x:Name="FilesList" 
                                SelectionMode="None"
                                ItemSizingStrategy="MeasureFirstItem">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,4" Padding="8">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                                    <CheckBox IsChecked="{Binding Include}" 
                                              VerticalOptions="Center"/>
                                    
                                    <VerticalStackLayout Grid.Column="1" Spacing="2">
                                        <Label Text="{Binding FileName}" 
                                               FontAttributes="Bold"
                                               FontSize="13"
                                               LineBreakMode="TailTruncation"/>
                                        <Label Text="{Binding ContentSummary}" 
                                               FontSize="11"
                                               TextColor="{StaticResource Gray600}"/>
                                    </VerticalStackLayout>
                                    
                                    <Label Grid.Column="2"
                                           Text="{Binding StatusIcon}"
                                           FontSize="16"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Progress Bar (Hidden by default) -->
                <Border x:Name="ProgressBorder"
                        IsVisible="False"
                        Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout Padding="12" Spacing="8">
                        <Label x:Name="ProgressLabel" 
                               Text="Processing files..."
                               FontAttributes="Bold"/>
                        <ProgressBar x:Name="ProgressBar" Progress="0"/>
                        <Label x:Name="ProgressDetailLabel"
                               Text="File 0 of 0"
                               FontSize="12"
                               TextColor="{StaticResource Gray600}"/>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Actions -->
        <Border Grid.Row="2" 
                BackgroundColor="{StaticResource Gray100}"
                Padding="16"
                StrokeThickness="0">
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Button Text="Cancel"
                        Clicked="OnCancelClicked"
                        BackgroundColor="{StaticResource Gray500}"
                        TextColor="White"
                        Padding="16,12"/>
                <Button Grid.Column="1"
                        Text="Import All Selected"
                        Clicked="OnImportClicked"
                        BackgroundColor="{StaticResource SuccessColor}"
                        TextColor="White"
                        Padding="16,12"
                        x:Name="ImportButton"/>
            </Grid>
        </Border>

    </Grid>
</ContentPage>
