<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Wdpl2.Views.BatchImportPreviewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Batch HTML Import Preview">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="{StaticResource PrimaryColor}" 
                Padding="16">
            <VerticalStackLayout Spacing="4">
                <Label Text="Batch HTML Import"
                       TextColor="White"
                       FontAttributes="Bold"
                       FontSize="18" />
                <Label x:Name="SummaryLabel"
                       Text="Files: 0 | Records: 0"
                       TextColor="White"
                       FontSize="14" />
                <Label x:Name="SeasonLabel"
                       Text="Target Season: "
                       TextColor="White"
                       FontSize="14" />
            </VerticalStackLayout>
        </Border>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="12" Spacing="16">

                <!-- Warnings/Errors -->
                <Border x:Name="AlertsBorder"
                        IsVisible="False"
                        BackgroundColor="{StaticResource WarningColor}"
                        Padding="12"
                        Stroke="{StaticResource WarningColor}"
                        StrokeThickness="0">
                    <VerticalStackLayout x:Name="AlertsStack" Spacing="4" />
                </Border>

                <!-- Season Selection -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout Padding="12" Spacing="8">
                        <Label Text="Target Season" FontAttributes="Bold" FontSize="16" />
                        <HorizontalStackLayout Spacing="8">
                            <Picker x:Name="SeasonPicker" 
                                    Title="Select season" 
                                    HorizontalOptions="FillAndExpand"
                                    SelectedIndexChanged="OnSeasonChanged"/>
                            <Button Text="+ New"
                                    Clicked="OnCreateSeasonClicked"
                                    BackgroundColor="{StaticResource SuccessColor}"
                                    TextColor="White"
                                    Padding="12,8" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Batch Actions -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <HorizontalStackLayout Padding="12" Spacing="8">
                        <Button Text="Select All Files"
                                Clicked="OnSelectAllFilesClicked"
                                FontSize="12"
                                Padding="8,4"
                                HorizontalOptions="StartAndExpand"/>
                        <Button Text="Deselect All"
                                Clicked="OnDeselectAllFilesClicked"
                                FontSize="12"
                                Padding="8,4"/>
                        <Button Text="Expand All"
                                Clicked="OnExpandAllClicked"
                                FontSize="12"
                                Padding="8,4"/>
                        <Button Text="Collapse All"
                                Clicked="OnCollapseAllClicked"
                                FontSize="12"
                                Padding="8,4"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Files List -->
                <Label Text="Files to Import" FontAttributes="Bold" FontSize="16" />
                
                <CollectionView x:Name="FilesList" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,8">
                                <VerticalStackLayout Padding="12" Spacing="8">
                                    
                                    <!-- File Header -->
                                    <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12">
                                        <CheckBox IsChecked="{Binding Include}" 
                                                  VerticalOptions="Center"/>
                                        
                                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                                            <Label Text="{Binding FileName}" 
                                                   FontAttributes="Bold"
                                                   FontSize="14"/>
                                            <Label Text="{Binding PageTitle}" 
                                                   FontSize="12"
                                                   TextColor="{StaticResource Gray600}"/>
                                            <Label FontSize="11" TextColor="{StaticResource Gray500}">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding FileSizeFormatted}"/>
                                                        <Span Text=" - "/>
                                                        <Span Text="{Binding TablesFound}"/>
                                                        <Span Text=" tables"/>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </VerticalStackLayout>
                                        
                                        <Label Grid.Column="2"
                                               Text="{Binding StatusIcon}"
                                               FontSize="20"
                                               VerticalOptions="Center"/>
                                        
                                        <Button Grid.Column="3"
                                                Text="{Binding IsExpanded, Converter={StaticResource BoolToExpandTextConverter}}"
                                                Clicked="OnToggleFileClicked"
                                                CommandParameter="{Binding .}"
                                                FontSize="11"
                                                Padding="8,4"/>
                                    </Grid>

                                    <!-- Content Summary (Always Visible) -->
                                    <Border BackgroundColor="{StaticResource Gray100}"
                                            Padding="8"
                                            Stroke="{StaticResource Gray300}"
                                            StrokeThickness="1">
                                        <Label Text="{Binding ContentSummary}"
                                               FontSize="12"
                                               TextColor="{StaticResource Gray700}"/>
                                    </Border>

                                    <!-- Expanded Details -->
                                    <VerticalStackLayout IsVisible="{Binding IsExpanded}" Spacing="8">
                                        
                                        <BoxView HeightRequest="1" Color="{StaticResource Gray300}"/>
                                        
                                        <!-- Divisions -->
                                        <VerticalStackLayout IsVisible="{Binding Preview.Divisions, Converter={StaticResource IsNotNullOrEmptyConverter}}"
                                                           Spacing="4">
                                            <Label Text="Divisions" FontAttributes="Bold" FontSize="13"/>
                                            <CollectionView ItemsSource="{Binding Preview.Divisions}"
                                                          SelectionMode="None">
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BackgroundColor="{StaticResource Gray50}"
                                                              Padding="8"
                                                              Margin="0,2"
                                                              Stroke="{StaticResource Gray200}"
                                                              StrokeThickness="1">
                                                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                                                                <CheckBox IsChecked="{Binding Include}"/>
                                                                <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                                    <Label Text="{Binding Name}" FontSize="12" FontAttributes="Bold"/>
                                                                    <Label FontSize="11" TextColor="{StaticResource Gray600}">
                                                                        <Label.FormattedText>
                                                                            <FormattedString>
                                                                                <Span Text="Winner: "/>
                                                                                <Span Text="{Binding WinnerTeam}"/>
                                                                            </FormattedString>
                                                                        </Label.FormattedText>
                                                                    </Label>
                                                                </VerticalStackLayout>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>
                                        </VerticalStackLayout>

                                        <!-- Teams -->
                                        <VerticalStackLayout IsVisible="{Binding Preview.Teams, Converter={StaticResource IsNotNullOrEmptyConverter}}"
                                                           Spacing="4">
                                            <Label Text="Teams" FontAttributes="Bold" FontSize="13"/>
                                            <CollectionView ItemsSource="{Binding Preview.Teams}"
                                                          SelectionMode="None"
                                                          MaximumHeightRequest="200">
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BackgroundColor="{StaticResource Gray50}"
                                                              Padding="8"
                                                              Margin="0,2"
                                                              Stroke="{StaticResource Gray200}"
                                                              StrokeThickness="1">
                                                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                                                                <CheckBox IsChecked="{Binding Include}"/>
                                                                <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                                    <Label Text="{Binding Name}" FontSize="12" FontAttributes="Bold"/>
                                                                    <Label Text="{Binding DivisionName}" 
                                                                           FontSize="11" 
                                                                           TextColor="{StaticResource Gray600}"/>
                                                                </VerticalStackLayout>
                                                                <Label Grid.Column="2"
                                                                       Text="{Binding Status}"
                                                                       FontSize="10"
                                                                       VerticalOptions="Center"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>
                                        </VerticalStackLayout>

                                        <!-- Players -->
                                        <VerticalStackLayout IsVisible="{Binding Preview.Players, Converter={StaticResource IsNotNullOrEmptyConverter}}"
                                                           Spacing="4">
                                            <Label Text="Players" FontAttributes="Bold" FontSize="13"/>
                                            <Label Text="{Binding Preview.Players.Count, StringFormat='{0} player(s) will be imported'}"
                                                   FontSize="11"
                                                   TextColor="{StaticResource Gray600}"/>
                                        </VerticalStackLayout>

                                        <!-- Errors/Warnings -->
                                        <VerticalStackLayout IsVisible="{Binding HasErrors}" Spacing="4">
                                            <Label Text="Errors:" TextColor="{StaticResource DangerColor}" FontAttributes="Bold" FontSize="12"/>
                                            <CollectionView ItemsSource="{Binding Errors}" SelectionMode="None">
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Label Text="{Binding .}"
                                                               TextColor="{StaticResource DangerColor}"
                                                               FontSize="11"
                                                               Margin="0,2"/>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>
                                        </VerticalStackLayout>

                                        <VerticalStackLayout IsVisible="{Binding HasWarnings}" Spacing="4">
                                            <Label Text="Warnings:" TextColor="{StaticResource WarningColor}" FontAttributes="Bold" FontSize="12"/>
                                            <CollectionView ItemsSource="{Binding Warnings}" SelectionMode="None">
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Label Text="{Binding .}"
                                                               TextColor="{StaticResource WarningColor}"
                                                               FontSize="11"
                                                               Margin="0,2"/>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>
                                        </VerticalStackLayout>

                                    </VerticalStackLayout>

                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Progress Bar (Hidden by default) -->
                <Border x:Name="ProgressBorder"
                        IsVisible="False"
                        Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout Padding="12" Spacing="8">
                        <Label x:Name="ProgressLabel" 
                               Text="Processing files..."
                               FontAttributes="Bold"/>
                        <ProgressBar x:Name="ProgressBar" Progress="0"/>
                        <Label x:Name="ProgressDetailLabel"
                               Text="File 0 of 0"
                               FontSize="12"
                               TextColor="{StaticResource Gray600}"/>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Actions -->
        <Border Grid.Row="2" 
                BackgroundColor="{StaticResource Gray100}"
                Padding="16"
                StrokeThickness="0">
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Button Text="Cancel"
                        Clicked="OnCancelClicked"
                        BackgroundColor="{StaticResource Gray500}"
                        TextColor="White"
                        Padding="16,12"/>
                <Button Grid.Column="1"
                        Text="Import All Selected"
                        Clicked="OnImportClicked"
                        BackgroundColor="{StaticResource SuccessColor}"
                        TextColor="White"
                        Padding="16,12"
                        x:Name="ImportButton"/>
            </Grid>
        </Border>

    </Grid>
</ContentPage>
