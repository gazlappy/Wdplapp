<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Wdpl2.Views.PlayersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrls="clr-namespace:Wdpl2.Views.Controls"
    Title="Players"
    AutomationProperties.Name="Players management page">

    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,*" Padding="12" ColumnSpacing="12" RowSpacing="12">
        
        <!-- Header with Burger Menu Button -->
        <Grid Grid.ColumnSpan="2" ColumnDefinitions="Auto,*">
            <Button 
                x:Name="BurgerMenuBtn"
                Text="â˜°"
                FontSize="24"
                WidthRequest="50"
                HeightRequest="50"
                Padding="0"
                Margin="0,0,12,0"
                BackgroundColor="{AppThemeBinding Light=#3B82F6, Dark=#2563EB}"
                TextColor="White"
                AutomationProperties.Name="Open menu"
                AutomationProperties.HelpText="Opens the player controls menu" />
            
            <Label 
                Grid.Column="1"
                Text="Manage Players" 
                FontSize="20" 
                FontAttributes="Bold"
                VerticalOptions="Center"
                AutomationProperties.Name="Manage Players" />
        </Grid>

        <!-- Flyout Menu Overlay -->
        <Border 
            x:Name="FlyoutOverlay"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            IsVisible="False"
            BackgroundColor="#80000000"
            ZIndex="100"
            AutomationProperties.Name="Menu overlay">
            <Border.GestureRecognizers>
                <TapGestureRecognizer x:Name="OverlayTap" />
            </Border.GestureRecognizers>
        </Border>

        <!-- Flyout Menu Panel -->
        <Border 
            x:Name="FlyoutPanel"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            HorizontalOptions="Start"
            WidthRequest="400"
            IsVisible="False"
            BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}"
            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
            StrokeThickness="1"
            StrokeShape="RoundRectangle 0,12,12,0"
            Padding="16"
            ZIndex="101"
            AutomationProperties.Name="Player controls menu">
            <ScrollView>
                <VerticalStackLayout Spacing="12">
                    
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="âš™ï¸ Controls" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" />
                        <Button 
                            x:Name="CloseFlyoutBtn"
                            Text="âœ•"
                            FontSize="18"
                            WidthRequest="40"
                            HeightRequest="40"
                            Padding="0"
                            HorizontalOptions="EndAndExpand"
                            BackgroundColor="{AppThemeBinding Light=#EF4444, Dark=#DC2626}"
                            TextColor="White"
                            AutomationProperties.Name="Close menu" />
                    </HorizontalStackLayout>
                    
                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#E0E0E0, Dark=#333333}" />

                    <Label Text="Player Details" FontSize="16" FontAttributes="Bold" />
                    
                    <VerticalStackLayout Spacing="4">
                        <Label Text="First Name" FontSize="12" />
                        <Entry x:Name="FirstNameEntry" AutomationProperties.Name="Player first name" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Last Name" FontSize="12" />
                        <Entry x:Name="LastNameEntry" AutomationProperties.Name="Player last name" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Team" FontSize="12" />
                        <Picker x:Name="TeamPicker" ItemDisplayBinding="{Binding Name}" AutomationProperties.Name="Player team" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Notes" FontSize="12" />
                        <Entry x:Name="NotesEntry" AutomationProperties.Name="Player notes" />
                    </VerticalStackLayout>

                    <!-- Player Status -->
                    <Grid ColumnDefinitions="Auto,*" Padding="0,8,0,0">
                        <Label Text="Active Player" VerticalOptions="Center" FontSize="12" />
                        <Switch x:Name="IsActiveSwitch" Grid.Column="1" IsToggled="True" AutomationProperties.Name="Player is active" />
                    </Grid>
                    
                    <Label x:Name="DeactivationInfoLabel" Text="" FontSize="11" TextColor="#F59E0B" IsVisible="False" />

                    <Label Text="Actions" FontSize="16" FontAttributes="Bold" Margin="0,8,0,0" />

                    <HorizontalStackLayout Spacing="8">
                        <Button x:Name="AddBtn" Text="+ Add" AutomationProperties.Name="Add new player" />
                        <Button x:Name="UpdateBtn" Text="Update" AutomationProperties.Name="Update player" />
                        <Button x:Name="DeleteBtn" Text="Delete" BackgroundColor="#EF4444" TextColor="White" AutomationProperties.Name="Delete player" />
                    </HorizontalStackLayout>

                    <!-- Transfer Button -->
                    <Button 
                        x:Name="TransferBtn" 
                        Text="ðŸ”„ Transfer to Another Team" 
                        BackgroundColor="#8B5CF6" 
                        TextColor="White" 
                        IsEnabled="False"
                        AutomationProperties.Name="Transfer player to another team" />

                    <HorizontalStackLayout Spacing="8">
                        <Button x:Name="MultiSelectBtn" Text="â˜ Multi-Select OFF" BackgroundColor="#6B7280" TextColor="White" AutomationProperties.Name="Toggle multi-select mode" />
                        <Button x:Name="BulkDeleteBtn" Text="ðŸ—‘ï¸ Delete Selected" BackgroundColor="#DC2626" TextColor="White" IsVisible="False" AutomationProperties.Name="Delete selected players" />
                    </HorizontalStackLayout>

                    <!-- Transfer History -->
                    <VerticalStackLayout x:Name="TransferHistorySection" IsVisible="False" Spacing="4">
                        <Label Text="Transfer History" FontSize="14" FontAttributes="Bold" Margin="0,8,0,0" />
                        <CollectionView x:Name="TransferHistoryList" HeightRequest="120">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8" Margin="0,2" BackgroundColor="{AppThemeBinding Light=#F3F4F6, Dark=#374151}" StrokeThickness="0" StrokeShape="RoundRectangle 4">
                                        <VerticalStackLayout Spacing="2">
                                            <Label Text="{Binding TransferSummary}" FontSize="11" FontAttributes="Bold" />
                                            <Label Text="{Binding TransferDetails}" FontSize="10" TextColor="#666" />
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <Label Text="Data Management" FontSize="16" FontAttributes="Bold" Margin="0,8,0,0" />

                    <HorizontalStackLayout Spacing="8">
                        <Button x:Name="SaveBtn" Text="ðŸ’¾ Save" AutomationProperties.Name="Save changes" />
                        <Button x:Name="ReloadBtn" Text="ðŸ”„ Reload" AutomationProperties.Name="Reload data" />
                    </HorizontalStackLayout>
                    
                    <Button x:Name="ExportBtn" Text="ðŸ“¤ Export CSV" AutomationProperties.Name="Export players to CSV" />

                    <ctrls:CsvImportBox x:Name="PlayersImport" Title="Import Players (.csv)" AutomationProperties.Name="Import players from CSV" />

                    <Label x:Name="StatusLbl" Text="" FontAttributes="Italic" FontSize="12" TextColor="#666" AutomationProperties.Name="Status message" />
                    
                </VerticalStackLayout>
            </ScrollView>
        </Border>

        <!-- Left: search + list -->
        <Border 
            Grid.Row="1" 
            StrokeShape="RoundRectangle 12" 
            Padding="12"
            BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1A1A1A}"
            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
            StrokeThickness="1"
            AutomationProperties.Name="Players list panel">
            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="8">
                <Entry x:Name="SearchEntry" Placeholder="Search players..." AutomationProperties.Name="Search players" />
                
                <!-- Show All Seasons Toggle -->
                <HorizontalStackLayout Grid.Row="1" Spacing="8" Padding="4,0">
                    <CheckBox x:Name="ShowAllSeasonsCheck" AutomationProperties.Name="Show players from all seasons" />
                    <Label Text="Show all seasons" VerticalOptions="Center" FontSize="14">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnShowAllSeasonsTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
                
                <CollectionView 
                    x:Name="PlayersList" 
                    Grid.Row="2"
                    SelectionMode="Single"
                    VerticalScrollBarVisibility="Always"
                    AutomationProperties.Name="Players list">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="8"
                                Margin="0,0,0,4"
                                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2A2A2A}"
                                Opacity="{Binding Opacity}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 8">
                                <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="8">
                                    <Border
                                        BackgroundColor="{Binding AvatarColor}"
                                        StrokeThickness="0"
                                        WidthRequest="32"
                                        HeightRequest="32"
                                        StrokeShape="RoundRectangle 16">
                                        <Label
                                            Text="{Binding Initials}"
                                            TextColor="White"
                                            FontAttributes="Bold"
                                            FontSize="12"
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center" />
                                    </Border>
                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="0">
                                        <Label 
                                            Text="{Binding FullName}" 
                                            FontSize="14"
                                            TextDecorations="{Binding NameDecoration}" />
                                        <Label 
                                            Text="{Binding StatusLabel}" 
                                            FontSize="10" 
                                            TextColor="#F59E0B"
                                            IsVisible="{Binding ShowStatusLabel}" />
                                    </VerticalStackLayout>
                                    <Label 
                                        Grid.Column="2" 
                                        Text="{Binding TeamLabel}" 
                                        FontSize="12" 
                                        TextColor="#666" 
                                        VerticalOptions="Center" />
                                    <Label 
                                        Grid.Column="3" 
                                        Text="{Binding TransferBadge}" 
                                        FontSize="10" 
                                        TextColor="#8B5CF6" 
                                        VerticalOptions="Center"
                                        IsVisible="{Binding HasTransfers}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Border>

        <!-- Right: Head-to-Head Results -->
        <Border 
            Grid.Row="1" 
            Grid.Column="1"
            StrokeShape="RoundRectangle 12" 
            Padding="12"
            BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1A1A1A}"
            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
            StrokeThickness="1"
            AutomationProperties.Name="Player details and head-to-head panel">
            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="12">
                
                <!-- Player Info Header -->
                <VerticalStackLayout x:Name="PlayerInfoPanel" IsVisible="False" Spacing="4" AutomationProperties.Name="Selected player info">
                    <Label x:Name="SelectedPlayerName" FontSize="18" FontAttributes="Bold" />
                    <Label x:Name="SelectedPlayerTeam" FontSize="14" TextColor="#666" />
                    <Label x:Name="SelectedPlayerStats" FontSize="12" TextColor="#666" />
                </VerticalStackLayout>

                <!-- Filter Controls -->
                <HorizontalStackLayout Grid.Row="1" x:Name="FilterPanel" IsVisible="False" Spacing="8">
                    <Label Text="Season:" VerticalOptions="Center" FontSize="12" />
                    <Picker x:Name="H2HSeasonPicker" 
                            WidthRequest="150" 
                            FontSize="12"
                            ItemDisplayBinding="{Binding Name}"
                            AutomationProperties.Name="Filter by season" />
                </HorizontalStackLayout>

                <!-- Head-to-Head List -->
                <ScrollView Grid.Row="2" x:Name="H2HScrollView">
                    <VerticalStackLayout x:Name="H2HContainer" Spacing="8">
                        
                        <!-- Empty State -->
                        <VerticalStackLayout 
                            x:Name="EmptyStatePanel"
                            Spacing="12"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Padding="20"
                            AutomationProperties.Name="No player selected">
                            <Label 
                                Text="ðŸ‘ˆ Select a player"
                                FontSize="16"
                                TextColor="#999"
                                HorizontalOptions="Center" />
                            <Label 
                                Text="View head-to-head results against opponents"
                                FontSize="12"
                                TextColor="#999"
                                HorizontalOptions="Center" />
                        </VerticalStackLayout>

                        <!-- Head-to-Head Results -->
                        <CollectionView 
                            x:Name="H2HList"
                            IsVisible="False"
                            SelectionMode="None"
                            AutomationProperties.Name="Head-to-head results">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,8"
                                        Padding="12"
                                        BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2A2A2A}"
                                        StrokeThickness="1"
                                        Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
                                        StrokeShape="RoundRectangle 8">
                                        <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                            
                                            <!-- Opponent Name and Overall Record -->
                                            <Grid ColumnDefinitions="*,Auto">
                                                <Label 
                                                    Text="{Binding OpponentName}"
                                                    FontSize="16"
                                                    FontAttributes="Bold"
                                                    VerticalOptions="Center" />
                                                <Border 
                                                    Grid.Column="1"
                                                    Padding="8,4"
                                                    BackgroundColor="{Binding RecordColor}"
                                                    StrokeThickness="0"
                                                    StrokeShape="RoundRectangle 4">
                                                    <Label 
                                                        Text="{Binding RecordText}"
                                                        FontSize="14"
                                                        FontAttributes="Bold"
                                                        TextColor="White" />
                                                </Border>
                                            </Grid>

                                            <!-- Statistics -->
                                            <Grid Grid.Row="1" ColumnDefinitions="*,*,*" ColumnSpacing="8">
                                                <VerticalStackLayout Spacing="2">
                                                    <Label Text="Frames" FontSize="10" TextColor="#666" HorizontalOptions="Center" />
                                                    <Label Text="{Binding TotalFrames}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                                <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                    <Label Text="Win %" FontSize="10" TextColor="#666" HorizontalOptions="Center" />
                                                    <Label Text="{Binding WinPercentage, StringFormat='{0:0}%'}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                                <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                    <Label Text="8-Balls" FontSize="10" TextColor="#666" HorizontalOptions="Center" />
                                                    <Label Text="{Binding EightBalls}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                            </Grid>

                                            <!-- Season Breakdown (if multiple seasons) -->
                                            <CollectionView 
                                                Grid.Row="2"
                                                ItemsSource="{Binding SeasonBreakdown}"
                                                IsVisible="{Binding HasMultipleSeasons}">
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid ColumnDefinitions="*,Auto" Margin="0,2" Padding="8,4" BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1A1A1A}">
                                                            <Label Text="{Binding SeasonName}" FontSize="11" TextColor="#666" VerticalOptions="Center" />
                                                            <Label Grid.Column="1" Text="{Binding Record}" FontSize="11" FontAttributes="Bold" VerticalOptions="Center" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
