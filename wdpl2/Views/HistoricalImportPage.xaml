<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Wdpl2.Views.HistoricalImportPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Wdpl2.Views"
    Title="Data Import Wizard">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header with Progress Indicator -->
        <Border Grid.Row="0" 
                BackgroundColor="{StaticResource PrimaryColor}" 
                Padding="20,16">
            <VerticalStackLayout Spacing="8">
                <Label Text="Import Historical Data"
                       TextColor="White"
                       FontAttributes="Bold"
                       FontSize="20" />
                
                <!-- Step Indicator -->
                <Grid x:Name="StepIndicator" ColumnDefinitions="*,*,*" ColumnSpacing="8">
                    <!-- Step 1 -->
                    <Border Grid.Column="0" 
                            BackgroundColor="White"
                            Padding="8,4"
                            StrokeThickness="0">
                        <HorizontalStackLayout Spacing="8">
                            <Label x:Name="Step1Icon" Text="1" 
                                   TextColor="{StaticResource PrimaryColor}"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                            <Label x:Name="Step1Label" Text="Choose Type" 
                                   TextColor="{StaticResource PrimaryColor}"
                                   FontSize="12"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                    
                    <!-- Step 2 -->
                    <Border Grid.Column="1" 
                            BackgroundColor="#FFFFFF40"
                            Padding="8,4"
                            StrokeThickness="0">
                        <HorizontalStackLayout Spacing="8">
                            <Label x:Name="Step2Icon" Text="2" 
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                            <Label x:Name="Step2Label" Text="Select Files" 
                                   TextColor="White"
                                   FontSize="12"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                    
                    <!-- Step 3 -->
                    <Border Grid.Column="2" 
                            BackgroundColor="#FFFFFF40"
                            Padding="8,4"
                            StrokeThickness="0">
                        <HorizontalStackLayout Spacing="8">
                            <Label x:Name="Step3Icon" Text="3" 
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                            <Label x:Name="Step3Label" Text="Import" 
                                   TextColor="White"
                                   FontSize="12"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>
        </Border>

        <!-- Content Area (Swappable) -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="0">
                
                <!-- STEP 1: Choose Import Type -->
                <VerticalStackLayout x:Name="Step1Content" 
                                   Padding="20" 
                                   Spacing="16"
                                   IsVisible="True">
                    
                    <Label Text="What would you like to import?"
                           FontSize="18"
                           FontAttributes="Bold"
                           Margin="0,8,0,16"/>

                    <!-- Historical Competitions (Manual Entry) - NEW! -->
                    <Border Style="{StaticResource CardBorderStyle}"
                            BackgroundColor="#FFF8E1"
                            Stroke="#FFC107"
                            StrokeThickness="2">
                        <Grid ColumnDefinitions="80,*,Auto" 
                              ColumnSpacing="16" 
                              Padding="16">
                            <Border Grid.Column="0"
                                    BackgroundColor="#FFC107"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    StrokeThickness="0">
                                <Label Text="ðŸ†" 
                                       FontSize="32"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" 
                                               Spacing="4"
                                               VerticalOptions="Center">
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="Historical Competitions"
                                           FontAttributes="Bold"
                                           FontSize="16"/>
                                    <Border BackgroundColor="#FFC107"
                                            Padding="6,2"
                                            StrokeThickness="0">
                                        <Label Text="MANUAL"
                                               TextColor="White"
                                               FontSize="9"
                                               FontAttributes="Bold"/>
                                    </Border>
                                </HorizontalStackLayout>
                                <Label Text="Add past competition winners, finals, and results manually"
                                       TextColor="{StaticResource Gray700}"
                                       FontSize="12"/>
                                <Label Text="âœ“ Winners  âœ“ Runners-Up  âœ“ Finals Scores  âœ“ All Formats"
                                       TextColor="{StaticResource SuccessColor}"
                                       FontSize="11"
                                       Margin="0,4,0,0"/>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Enter"
                                    Clicked="OnHistoricalCompetitionsClicked"
                                    BackgroundColor="#FFC107"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    Padding="20,12"
                                    FontAttributes="Bold"/>
                        </Grid>
                    </Border>

                    <!-- Access Database -->
                    <Border Style="{StaticResource CardBorderStyle}"
                            BackgroundColor="{StaticResource Gray50}">
                        <Grid ColumnDefinitions="80,*,Auto" 
                              ColumnSpacing="16" 
                              Padding="16">
                            <Border Grid.Column="0"
                                    BackgroundColor="{StaticResource PrimaryColor}"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    StrokeThickness="0">
                                <Label Text="ðŸ—„ï¸" 
                                       FontSize="32"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" 
                                               Spacing="4"
                                               VerticalOptions="Center">
                                <Label Text="Access Database (.mdb/.accdb)"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="Import complete league data with fixtures, results, and history"
                                       TextColor="{StaticResource Gray600}"
                                       FontSize="12"/>
                                <Label Text="âœ“ Teams  âœ“ Players  âœ“ Fixtures  âœ“ Results"
                                       TextColor="{StaticResource SuccessColor}"
                                       FontSize="11"
                                       Margin="0,4,0,0"/>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Select"
                                    Clicked="OnSelectAccessDatabase"
                                    BackgroundColor="{StaticResource PrimaryColor}"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    Padding="20,12"/>
                        </Grid>
                    </Border>

                    <!-- Paradox Database Folder -->
                    <Border Style="{StaticResource CardBorderStyle}"
                            BackgroundColor="#E0F2FE"
                            Stroke="#0EA5E9"
                            StrokeThickness="2">
                        <Grid ColumnDefinitions="80,*,Auto" 
                              ColumnSpacing="16" 
                              Padding="16">
                            <Border Grid.Column="0"
                                    BackgroundColor="#0EA5E9"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    StrokeThickness="0">
                                <Label Text="ðŸ“" 
                                       FontSize="32"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" 
                                               Spacing="4"
                                               VerticalOptions="Center">
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="Paradox Database (.DB)"
                                           FontAttributes="Bold"
                                           FontSize="16"/>
                                    <Border BackgroundColor="#0EA5E9"
                                            Padding="6,2"
                                            StrokeThickness="0">
                                        <Label Text="LEGACY"
                                               TextColor="White"
                                               FontSize="9"
                                               FontAttributes="Bold"/>
                                    </Border>
                                </HorizontalStackLayout>
                                <Label Text="Import from old Paradox/VBA pool league databases"
                                       TextColor="{StaticResource Gray700}"
                                       FontSize="12"/>
                                <Label Text="âœ“ Teams  âœ“ Players  âœ“ Divisions  âœ“ Venues  âœ“ Matches"
                                       TextColor="{StaticResource SuccessColor}"
                                       FontSize="11"
                                       Margin="0,4,0,0"/>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Browse"
                                    Clicked="OnSelectParadoxFolder"
                                    BackgroundColor="#0EA5E9"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    Padding="20,12"
                                    FontAttributes="Bold"/>
                        </Grid>
                    </Border>

                    <!-- Word Document -->
                    <Border Style="{StaticResource CardBorderStyle}"
                            BackgroundColor="{StaticResource Gray50}">
                        <Grid ColumnDefinitions="80,*,Auto" 
                              ColumnSpacing="16" 
                              Padding="16">
                            <Border Grid.Column="0"
                                    BackgroundColor="{StaticResource InfoColor}"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    StrokeThickness="0">
                                <Label Text="ðŸ“„" 
                                       FontSize="32"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" 
                                               Spacing="4"
                                               VerticalOptions="Center">
                                <Label Text="Word Document (.docx)"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="Extract season winners, runners-up, and competition results"
                                       TextColor="{StaticResource Gray600}"
                                       FontSize="12"/>
                                <Label Text="âœ“ Division Winners  âœ“ Competitions  âœ“ Awards"
                                       TextColor="{StaticResource SuccessColor}"
                                       FontSize="11"
                                       Margin="0,4,0,0"/>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Select"
                                    Clicked="OnSelectWordDocument"
                                    BackgroundColor="{StaticResource InfoColor}"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    Padding="20,12"/>
                        </Grid>
                    </Border>

                    <!-- SQL Database File -->
                    <Border Style="{StaticResource CardBorderStyle}"
                            BackgroundColor="{StaticResource Gray50}">
                        <Grid ColumnDefinitions="80,*,Auto" 
                              ColumnSpacing="16" 
                              Padding="16">
                            <Border Grid.Column="0"
                                    BackgroundColor="#9333EA"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    StrokeThickness="0">
                                <Label Text="ðŸ—ƒï¸" 
                                       FontSize="32"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" 
                                               Spacing="4"
                                               VerticalOptions="Center">
                                <Label Text="SQL Database Dump (.sql)"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="Import from MySQL, PostgreSQL, SQLite, or SQL Server dumps"
                                       TextColor="{StaticResource Gray600}"
                                       FontSize="12"/>
                                <Label Text="âœ“ Complete Migration  âœ“ All Tables  âœ“ Relationships"
                                       TextColor="{StaticResource SuccessColor}"
                                       FontSize="11"
                                       Margin="0,4,0,0"/>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Select"
                                    Clicked="OnSelectSqlFile"
                                    BackgroundColor="#9333EA"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    Padding="20,12"/>
                        </Grid>
                    </Border>

                    <!-- Excel Spreadsheet -->
                    <Border Style="{StaticResource CardBorderStyle}"
                            BackgroundColor="{StaticResource Gray50}">
                        <Grid ColumnDefinitions="80,*,Auto" 
                              ColumnSpacing="16" 
                              Padding="16">
                            <Border Grid.Column="0"
                                    BackgroundColor="{StaticResource SuccessColor}"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    StrokeThickness="0">
                                <Label Text="ðŸ“Š" 
                                       FontSize="32"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" 
                                               Spacing="4"
                                               VerticalOptions="Center">
                                <Label Text="Excel Spreadsheet (.xlsx/.csv)"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="Import structured data from spreadsheets and CSV files"
                                       TextColor="{StaticResource Gray600}"
                                       FontSize="12"/>
                                <Label Text="âœ“ Teams  âœ“ Players  âœ“ Venues  âœ“ Bulk Data"
                                       TextColor="{StaticResource SuccessColor}"
                                       FontSize="11"
                                       Margin="0,4,0,0"/>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Select"
                                    Clicked="OnSelectExcelSpreadsheet"
                                    BackgroundColor="{StaticResource SuccessColor}"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    Padding="20,12"/>
                        </Grid>
                    </Border>

                    <!-- HTML Webpage (Single) -->
                    <Border Style="{StaticResource CardBorderStyle}"
                            BackgroundColor="{StaticResource Gray50}">
                        <Grid ColumnDefinitions="80,*,Auto" 
                              ColumnSpacing="16" 
                              Padding="16">
                            <Border Grid.Column="0"
                                    BackgroundColor="{StaticResource WarningColor}"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    StrokeThickness="0">
                                <Label Text="ðŸŒ" 
                                       FontSize="32"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" 
                                               Spacing="4"
                                               VerticalOptions="Center">
                                <Label Text="HTML Webpage (Single File)"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="Extract league data from a single saved webpage"
                                       TextColor="{StaticResource Gray600}"
                                       FontSize="12"/>
                                <Label Text="âœ“ League Tables  âœ“ Results  âœ“ Player Stats"
                                       TextColor="{StaticResource SuccessColor}"
                                       FontSize="11"
                                       Margin="0,4,0,0"/>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Select"
                                    Clicked="OnSelectSingleHTML"
                                    BackgroundColor="{StaticResource WarningColor}"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    Padding="20,12"/>
                        </Grid>
                    </Border>

                    <!-- HTML Batch Import -->
                    <Border Style="{StaticResource CardBorderStyle}"
                            BackgroundColor="#FEF3C7"
                            Stroke="{StaticResource WarningColor}"
                            StrokeThickness="2">
                        <Grid ColumnDefinitions="80,*,Auto" 
                              ColumnSpacing="16" 
                              Padding="16">
                            <Border Grid.Column="0"
                                    BackgroundColor="{StaticResource WarningColor}"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    StrokeThickness="0">
                                <Label Text="ðŸŒâœ¨" 
                                       FontSize="28"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" 
                                               Spacing="4"
                                               VerticalOptions="Center">
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="HTML Batch Import"
                                           FontAttributes="Bold"
                                           FontSize="16"/>
                                    <Border BackgroundColor="{StaticResource SuccessColor}"
                                            Padding="6,2"
                                            StrokeThickness="0">
                                        <Label Text="RECOMMENDED"
                                               TextColor="White"
                                               FontSize="9"
                                               FontAttributes="Bold"/>
                                    </Border>
                                </HorizontalStackLayout>
                                <Label Text="Import MULTIPLE HTML files at once - perfect for season archives!"
                                       TextColor="{StaticResource Gray700}"
                                       FontSize="12"
                                       FontAttributes="Bold"/>
                                <Label Text="âœ“ Multi-File  âœ“ Preview All  âœ“ Batch Process  âœ“ Fast!"
                                       TextColor="{StaticResource SuccessColor}"
                                       FontSize="11"
                                       Margin="0,4,0,0"/>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Select"
                                    Clicked="OnSelectBatchHTML"
                                    BackgroundColor="{StaticResource WarningColor}"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    Padding="20,12"
                                    FontAttributes="Bold"/>
                        </Grid>
                    </Border>

                    <!-- PDF Document -->
                    <Border Style="{StaticResource CardBorderStyle}"
                            BackgroundColor="{StaticResource Gray50}">
                        <Grid ColumnDefinitions="80,*,Auto" 
                              ColumnSpacing="16" 
                              Padding="16">
                            <Border Grid.Column="0"
                                    BackgroundColor="{StaticResource DangerColor}"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    StrokeThickness="0">
                                <Label Text="ðŸ“•" 
                                       FontSize="32"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" 
                                               Spacing="4"
                                               VerticalOptions="Center">
                                <Label Text="PDF Document (.pdf)"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="Extract league tables and data from PDF reports"
                                       TextColor="{StaticResource Gray600}"
                                       FontSize="12"/>
                                <Label Text="âœ“ League Tables  âœ“ Player Lists  âœ“ Text Extraction"
                                       TextColor="{StaticResource SuccessColor}"
                                       FontSize="11"
                                       Margin="0,4,0,0"/>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Select"
                                    Clicked="OnSelectPDF"
                                    BackgroundColor="{StaticResource DangerColor}"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    Padding="20,12"/>
                        </Grid>
                    </Border>

                </VerticalStackLayout>

                <!-- STEP 2: File Selection (Dynamic based on type) -->
                <VerticalStackLayout x:Name="Step2Content" 
                                   Padding="20" 
                                   Spacing="16"
                                   IsVisible="False">
                    
                    <Label x:Name="Step2Title"
                           Text="Select File(s)"
                           FontSize="18"
                           FontAttributes="Bold"
                           Margin="0,8,0,0"/>

                    <Label x:Name="Step2Description"
                           Text="Choose the file you want to import"
                           TextColor="{StaticResource Gray600}"
                           FontSize="14"
                           Margin="0,0,0,16"/>

                    <!-- File Selection UI (varies by type) -->
                    <VerticalStackLayout x:Name="FileSelectionArea" Spacing="12"/>

                    <!-- Selected Files Display -->
                    <Border x:Name="SelectedFilesPanel"
                            Style="{StaticResource CardBorderStyle}"
                            IsVisible="False">
                        <VerticalStackLayout Padding="16" Spacing="12">
                            <Label Text="Selected Files"
                                   FontAttributes="Bold"
                                   FontSize="14"/>
                            <CollectionView x:Name="SelectedFilesList"
                                          SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="local:SelectedFile">
                                        <Border BackgroundColor="{StaticResource Gray100}"
                                              Padding="12,8"
                                              Margin="0,4"
                                              StrokeThickness="0">
                                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                                <VerticalStackLayout Spacing="2">
                                                    <Label Text="{Binding FileName}"
                                                           FontSize="13"
                                                           FontAttributes="Bold"/>
                                                    <Label Text="{Binding FilePath}"
                                                           FontSize="11"
                                                           TextColor="{StaticResource Gray600}"/>
                                                </VerticalStackLayout>
                                                <Button Grid.Column="1"
                                                        Text="âœ•"
                                                        Clicked="OnRemoveFile"
                                                        CommandParameter="{Binding .}"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{StaticResource DangerColor}"
                                                        FontSize="18"
                                                        Padding="8"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Border>

                </VerticalStackLayout>

                <!-- STEP 3: Processing/Results -->
                <VerticalStackLayout x:Name="Step3Content" 
                                   Padding="20" 
                                   Spacing="16"
                                   IsVisible="False">
                    
                    <Label x:Name="Step3Title"
                           Text="Processing..."
                           FontSize="18"
                           FontAttributes="Bold"
                           Margin="0,8,0,16"/>

                    <!-- Progress Indicator -->
                    <Border x:Name="ProgressPanel"
                            Style="{StaticResource CardBorderStyle}"
                            IsVisible="False">
                        <VerticalStackLayout Padding="20" Spacing="12">
                            <ActivityIndicator IsRunning="True"
                                             Color="{StaticResource PrimaryColor}"
                                             HeightRequest="40"/>
                            <Label x:Name="ProgressMessage"
                                   Text="Processing file..."
                                   HorizontalOptions="Center"
                                   FontSize="14"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Results Display -->
                    <VerticalStackLayout x:Name="ResultsArea" Spacing="12"/>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Navigation Buttons -->
        <Border Grid.Row="2" 
                BackgroundColor="{StaticResource Gray100}"
                Padding="20,16"
                StrokeThickness="0">
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                <Button x:Name="BackButton"
                        Text="â† Back"
                        Clicked="OnBackClicked"
                        BackgroundColor="{StaticResource Gray500}"
                        TextColor="White"
                        IsVisible="False"
                        Padding="16,12"/>
                
                <Button Grid.Column="1"
                        x:Name="CancelButton"
                        Text="Cancel"
                        Clicked="OnCancelClicked"
                        BackgroundColor="{StaticResource Gray400}"
                        TextColor="White"
                        Padding="16,12"/>
                
                <Button Grid.Column="2"
                        x:Name="NextButton"
                        Text="Next â†’"
                        Clicked="OnNextClicked"
                        BackgroundColor="{StaticResource PrimaryColor}"
                        TextColor="White"
                        IsVisible="False"
                        Padding="16,12"/>
            </Grid>
        </Border>

        <!-- Status Label -->
        <Label x:Name="StatusLabel"
               Grid.Row="2"
               Text=""
               FontSize="11"
               TextColor="{StaticResource Gray600}"
               Margin="20,0,20,8"
               HorizontalOptions="Start"
               VerticalOptions="End"
               IsVisible="False"/>

    </Grid>
</ContentPage>
