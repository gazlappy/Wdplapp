<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wdpl2.Views.PoolGamePage"
             Title="Pool Game"
             BackgroundColor="#1e3c72">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="#2a5298" 
               Padding="15" 
               CornerRadius="0"
               HasShadow="True">
            <Grid ColumnDefinitions="*,Auto">
                <Label Text="UK 8-Ball Pool Game" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"/>
                <Button Grid.Column="1"
                        Text="Reset"
                        x:Name="ResetBtn"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        CornerRadius="8"
                        Padding="20,10"/>
            </Grid>
        </Frame>

        <!-- WebView for Game -->
        <WebView Grid.Row="1" 
                 x:Name="GameWebView"
                 Margin="0"/>

        <!-- Instructions -->
        <Frame Grid.Row="2" 
               BackgroundColor="#2a5298" 
               Padding="15" 
               CornerRadius="0"
               HasShadow="True">
            <VerticalStackLayout Spacing="5">
                <Label Text="Touch Controls:" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Label Text="Tap and hold to aim and power up shot" 
                       FontSize="12" 
                       TextColor="White" 
                       Opacity="0.9"/>
                <Label Text="Release to shoot - longer hold = more power" 
                       FontSize="12" 
                       TextColor="White" 
                       Opacity="0.9"/>
                <Label Text="Tap New Game button in game to restart" 
                       FontSize="12" 
                       TextColor="White" 
                       Opacity="0.9"/>
            </VerticalStackLayout>
        </Frame>

    </Grid>

</ContentPage>
