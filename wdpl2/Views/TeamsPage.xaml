<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Wdpl2.Views.TeamsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrls="clr-namespace:Wdpl2.Views.Controls"
    Title="Teams">

    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,*" Padding="12" ColumnSpacing="12" RowSpacing="12">
        
        <!-- Header with Burger Menu Button -->
        <Grid Grid.ColumnSpan="2" ColumnDefinitions="Auto,*">
            <Button 
                x:Name="BurgerMenuBtn"
                Text="â˜°"
                FontSize="24"
                WidthRequest="50"
                HeightRequest="50"
                Padding="0"
                Margin="0,0,12,0"
                BackgroundColor="{AppThemeBinding Light=#3B82F6, Dark=#2563EB}"
                TextColor="White" />
            
            <Label 
                Grid.Column="1"
                Text="Manage Teams" 
                FontSize="20" 
                FontAttributes="Bold"
                VerticalOptions="Center" />
        </Grid>

        <!-- Flyout Menu Overlay -->
        <Border 
            x:Name="FlyoutOverlay"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            IsVisible="False"
            BackgroundColor="#80000000"
            ZIndex="100">
            <Border.GestureRecognizers>
                <TapGestureRecognizer x:Name="OverlayTap" />
            </Border.GestureRecognizers>
        </Border>

        <!-- Flyout Menu Panel -->
        <Border 
            x:Name="FlyoutPanel"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            HorizontalOptions="Start"
            WidthRequest="400"
            IsVisible="False"
            BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}"
            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
            StrokeThickness="1"
            StrokeShape="RoundRectangle 0,12,12,0"
            Padding="16"
            ZIndex="101">
            <ScrollView>
                <VerticalStackLayout Spacing="12">
                    
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="âš™ï¸ Controls" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" />
                        <Button 
                            x:Name="CloseFlyoutBtn"
                            Text="âœ•"
                            FontSize="18"
                            WidthRequest="40"
                            HeightRequest="40"
                            Padding="0"
                            HorizontalOptions="EndAndExpand"
                            BackgroundColor="{AppThemeBinding Light=#EF4444, Dark=#DC2626}"
                            TextColor="White" />
                    </HorizontalStackLayout>
                    
                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#E0E0E0, Dark=#333333}" />

                    <Label Text="Team Details" FontSize="16" FontAttributes="Bold" />

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Team Name" FontSize="12" />
                        <Entry x:Name="TeamNameEntry" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Division" FontSize="12" />
                        <Picker x:Name="DivisionPicker" ItemDisplayBinding="{Binding Name}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Venue" FontSize="12" />
                        <Picker x:Name="VenuePicker" ItemDisplayBinding="{Binding Name}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Table" FontSize="12" />
                        <Picker x:Name="TablePicker" ItemDisplayBinding="{Binding Label}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Captain (Player)" FontSize="12" />
                        <Picker x:Name="CaptainPicker" ItemDisplayBinding="{Binding FullName}" />
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="Auto,*" Padding="0,8,0,0">
                        <Label Text="Serves Food" VerticalOptions="Center" FontSize="12" />
                        <Switch x:Name="FoodSwitch" Grid.Column="1" />
                    </Grid>

                    <Label Text="Actions" FontSize="16" FontAttributes="Bold" Margin="0,8,0,0" />

                    <HorizontalStackLayout Spacing="8">
                        <Button x:Name="AddBtn" Text="+ Add" />
                        <Button x:Name="UpdateBtn" Text="Update" />
                        <Button x:Name="DeleteBtn" Text="Delete" BackgroundColor="#EF4444" TextColor="White" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="8">
                        <Button x:Name="MultiSelectBtn" Text="â˜ Multi-Select OFF" BackgroundColor="#6B7280" TextColor="White" />
                        <Button x:Name="BulkDeleteBtn" Text="ðŸ—‘ï¸ Delete Selected" BackgroundColor="#DC2626" TextColor="White" IsVisible="False" />
                    </HorizontalStackLayout>

                    <Label Text="Data Management" FontSize="16" FontAttributes="Bold" Margin="0,8,0,0" />

                    <HorizontalStackLayout Spacing="8">
                        <Button x:Name="SaveBtn" Text="ðŸ’¾ Save" />
                        <Button x:Name="ReloadBtn" Text="ðŸ”„ Reload" />
                    </HorizontalStackLayout>

                    <Button x:Name="ExportBtn" Text="ðŸ“¤ Export CSV" />

                    <ctrls:CsvImportBox x:Name="TeamsImport" Title="Import Teams (.csv)" />

                    <!-- DEBUG BUTTON -->
                    <Button x:Name="DebugCheckBtn" Text="ðŸ” Check Database" BackgroundColor="#FF6B00" TextColor="White" />

                    <Label x:Name="StatusLbl" Text="" FontAttributes="Italic" FontSize="12" TextColor="#666" />
                    
                </VerticalStackLayout>
            </ScrollView>
        </Border>

        <!-- Left: search + list -->
        <Border 
            Grid.Row="1" 
            StrokeShape="RoundRectangle 12" 
            Padding="12"
            BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1A1A1A}"
            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
            StrokeThickness="1">
            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="8">
                <Entry x:Name="SearchEntry" Placeholder="Search teams..." />

                <!-- SHOW ALL SEASONS -->
                <HorizontalStackLayout Grid.Row="1" Spacing="8" Padding="4,0">
                    <CheckBox x:Name="ShowAllSeasonsCheck" />
                    <Label Text="Show all seasons" VerticalOptions="Center" FontSize="14">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnShowAllSeasonsTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

                <CollectionView 
                    x:Name="TeamsList" 
                    Grid.Row="2"
                    SelectionMode="Single"
                    VerticalScrollBarVisibility="Always">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="8"
                                Margin="0,0,0,4"
                                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2A2A2A}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 8">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                    <Label 
                                        Text="{Binding Name}" 
                                        FontSize="14" 
                                        FontAttributes="Bold"
                                        VerticalOptions="Center" />
                                    <Label 
                                        Grid.Column="1" 
                                        FontSize="12" 
                                        TextColor="#666"
                                        VerticalOptions="Center">
                                        <Label.Text>
                                            <MultiBinding StringFormat="{}{0} â€¢ {1}">
                                                <Binding Path="VenueName" />
                                                <Binding Path="TableLabel" />
                                            </MultiBinding>
                                        </Label.Text>
                                    </Label>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Border>

        <!-- Right: Head-to-Head Match Results -->
        <Border 
            Grid.Row="1" 
            Grid.Column="1"
            StrokeShape="RoundRectangle 12" 
            Padding="12"
            BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1A1A1A}"
            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
            StrokeThickness="1">
            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="12">
                
                <!-- Team Info Header -->
                <VerticalStackLayout x:Name="TeamInfoPanel" IsVisible="False" Spacing="4">
                    <Label x:Name="SelectedTeamName" FontSize="18" FontAttributes="Bold" />
                    <Label x:Name="SelectedTeamDivision" FontSize="14" TextColor="#666" />
                    <Label x:Name="SelectedTeamStats" FontSize="12" TextColor="#666" />
                </VerticalStackLayout>

                <!-- Filter Controls -->
                <HorizontalStackLayout Grid.Row="1" x:Name="FilterPanel" IsVisible="False" Spacing="8">
                    <Label Text="Season:" VerticalOptions="Center" FontSize="12" />
                    <Picker x:Name="H2HSeasonPicker" 
                            WidthRequest="150" 
                            FontSize="12"
                            ItemDisplayBinding="{Binding Name}" />
                </HorizontalStackLayout>

                <!-- Head-to-Head List -->
                <ScrollView Grid.Row="2" x:Name="H2HScrollView">
                    <VerticalStackLayout x:Name="H2HContainer" Spacing="8">
                        
                        <!-- Empty State -->
                        <VerticalStackLayout 
                            x:Name="EmptyStatePanel"
                            Spacing="12"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Padding="20">
                            <Label 
                                Text="ðŸ‘ˆ Select a team"
                                FontSize="16"
                                TextColor="#999"
                                HorizontalOptions="Center" />
                            <Label 
                                Text="View head-to-head match results against opponents"
                                FontSize="12"
                                TextColor="#999"
                                HorizontalOptions="Center" />
                        </VerticalStackLayout>

                        <!-- Head-to-Head Results -->
                        <CollectionView 
                            x:Name="H2HList"
                            IsVisible="False"
                            SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,8"
                                        Padding="12"
                                        BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2A2A2A}"
                                        StrokeThickness="1"
                                        Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
                                        StrokeShape="RoundRectangle 8">
                                        <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                            
                                            <!-- Opponent Name and Overall Record -->
                                            <Grid ColumnDefinitions="*,Auto">
                                                <Label 
                                                    Text="{Binding OpponentName}"
                                                    FontSize="16"
                                                    FontAttributes="Bold"
                                                    VerticalOptions="Center" />
                                                <Border 
                                                    Grid.Column="1"
                                                    Padding="8,4"
                                                    BackgroundColor="{Binding RecordColor}"
                                                    StrokeThickness="0"
                                                    StrokeShape="RoundRectangle 4">
                                                    <Label 
                                                        Text="{Binding RecordText}"
                                                        FontSize="14"
                                                        FontAttributes="Bold"
                                                        TextColor="White" />
                                                </Border>
                                            </Grid>

                                            <!-- Statistics -->
                                            <Grid Grid.Row="1" ColumnDefinitions="*,*,*,*" ColumnSpacing="8">
                                                <VerticalStackLayout Spacing="2">
                                                    <Label Text="Matches" FontSize="10" TextColor="#666" HorizontalOptions="Center" />
                                                    <Label Text="{Binding TotalMatches}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                                <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                    <Label Text="Win %" FontSize="10" TextColor="#666" HorizontalOptions="Center" />
                                                    <Label Text="{Binding WinPercentage, StringFormat='{0:0}%'}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                                <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                    <Label Text="Frames" FontSize="10" TextColor="#666" HorizontalOptions="Center" />
                                                    <Label Text="{Binding FrameRecord}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                                <VerticalStackLayout Grid.Column="3" Spacing="2">
                                                    <Label Text="Points" FontSize="10" TextColor="#666" HorizontalOptions="Center" />
                                                    <Label Text="{Binding PointsRecord}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                            </Grid>

                                            <!-- Season Breakdown (if multiple seasons) -->
                                            <CollectionView 
                                                Grid.Row="2"
                                                ItemsSource="{Binding SeasonBreakdown}"
                                                IsVisible="{Binding HasMultipleSeasons}">
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,2" Padding="8,4" BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1A1A1A}">
                                                            <Label Text="{Binding SeasonName}" FontSize="11" TextColor="#666" VerticalOptions="Center" />
                                                            <Label Grid.Column="1" Text="{Binding MatchRecord}" FontSize="11" FontAttributes="Bold" VerticalOptions="Center" Margin="0,0,8,0" />
                                                            <Label Grid.Column="2" Text="{Binding FrameRecord}" FontSize="10" TextColor="#666" VerticalOptions="Center" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
