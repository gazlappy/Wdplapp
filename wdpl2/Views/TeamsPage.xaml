<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Wdpl2.Views.TeamsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrls="clr-namespace:Wdpl2.Views.Controls"
    Title="Teams"
    AutomationProperties.Name="Teams management page">

    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,*" Padding="12" ColumnSpacing="12" RowSpacing="12">
        
        <!-- Header with Burger Menu Button -->
        <Grid Grid.ColumnSpan="2" ColumnDefinitions="Auto,*">
            <Button 
                x:Name="BurgerMenuBtn"
                Text="â˜°"
                FontSize="24"
                WidthRequest="50"
                HeightRequest="50"
                Padding="0"
                Margin="0,0,12,0"
                BackgroundColor="{AppThemeBinding Light=#3B82F6, Dark=#2563EB}"
                TextColor="White"
                AutomationProperties.Name="Open menu"
                AutomationProperties.HelpText="Opens the team controls menu" />
            
            <Label 
                Grid.Column="1"
                Text="Manage Teams" 
                FontSize="20" 
                FontAttributes="Bold"
                VerticalOptions="Center"
                AutomationProperties.Name="Manage Teams" />
        </Grid>

        <!-- Flyout Menu Overlay -->
        <Border 
            x:Name="FlyoutOverlay"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            IsVisible="False"
            BackgroundColor="#80000000"
            ZIndex="100"
            AutomationProperties.Name="Menu overlay">
            <Border.GestureRecognizers>
                <TapGestureRecognizer x:Name="OverlayTap" />
            </Border.GestureRecognizers>
        </Border>

        <!-- Flyout Menu Panel -->
        <Border 
            x:Name="FlyoutPanel"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            HorizontalOptions="Start"
            WidthRequest="400"
            IsVisible="False"
            BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}"
            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
            StrokeThickness="1"
            StrokeShape="RoundRectangle 0,12,12,0"
            Padding="16"
            ZIndex="101"
            AutomationProperties.Name="Team controls menu">
            <ScrollView>
                <VerticalStackLayout Spacing="12">
                    
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="âš™ï¸ Controls" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" />
                        <Button 
                            x:Name="CloseFlyoutBtn"
                            Text="âœ•"
                            FontSize="18"
                            WidthRequest="40"
                            HeightRequest="40"
                            Padding="0"
                            HorizontalOptions="EndAndExpand"
                            BackgroundColor="{AppThemeBinding Light=#EF4444, Dark=#DC2626}"
                            TextColor="White"
                            AutomationProperties.Name="Close menu" />
                    </HorizontalStackLayout>
                    
                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#E0E0E0, Dark=#333333}" />

                    <Label Text="Team Details" FontSize="16" FontAttributes="Bold" />

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Team Name" FontSize="12" />
                        <Entry x:Name="TeamNameEntry" AutomationProperties.Name="Team name" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Division" FontSize="12" />
                        <Picker x:Name="DivisionPicker" ItemDisplayBinding="{Binding Name}" AutomationProperties.Name="Team division" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Venue" FontSize="12" />
                        <Picker x:Name="VenuePicker" ItemDisplayBinding="{Binding Name}" AutomationProperties.Name="Team venue" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Table" FontSize="12" />
                        <Picker x:Name="TablePicker" ItemDisplayBinding="{Binding Label}" AutomationProperties.Name="Team table" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="4">
                        <Label Text="Captain (Player)" FontSize="12" />
                        <Picker x:Name="CaptainPicker" ItemDisplayBinding="{Binding FullName}" AutomationProperties.Name="Team captain" />
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="Auto,*" Padding="0,8,0,0">
                        <Label Text="Serves Food" VerticalOptions="Center" FontSize="12" />
                        <Switch x:Name="FoodSwitch" Grid.Column="1" AutomationProperties.Name="Team provides food" />
                    </Grid>

                    <Label Text="Actions" FontSize="16" FontAttributes="Bold" Margin="0,8,0,0" />

                    <HorizontalStackLayout Spacing="8">
                        <Button x:Name="AddBtn" Text="+ Add" AutomationProperties.Name="Add new team" />
                        <Button x:Name="UpdateBtn" Text="Update" AutomationProperties.Name="Update team" />
                        <Button x:Name="DeleteBtn" Text="Delete" BackgroundColor="#EF4444" TextColor="White" AutomationProperties.Name="Delete team" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="8">
                        <Button x:Name="MultiSelectBtn" Text="â˜ Multi-Select OFF" BackgroundColor="#6B7280" TextColor="White" AutomationProperties.Name="Toggle multi-select mode" />
                        <Button x:Name="BulkDeleteBtn" Text="ðŸ—‘ï¸ Delete Selected" BackgroundColor="#DC2626" TextColor="White" IsVisible="False" AutomationProperties.Name="Delete selected teams" />
                    </HorizontalStackLayout>

                    <Label Text="Data Management" FontSize="16" FontAttributes="Bold" Margin="0,8,0,0" />

                    <HorizontalStackLayout Spacing="8">
                        <Button x:Name="SaveBtn" Text="ðŸ’¾ Save" AutomationProperties.Name="Save changes" />
                        <Button x:Name="ReloadBtn" Text="ðŸ”„ Reload" AutomationProperties.Name="Reload data" />
                    </HorizontalStackLayout>

                    <Button x:Name="ExportBtn" Text="ðŸ“¤ Export CSV" AutomationProperties.Name="Export teams to CSV" />

                    <ctrls:CsvImportBox x:Name="TeamsImport" Title="Import Teams (.csv)" AutomationProperties.Name="Import teams from CSV" />

                    <Button x:Name="DebugCheckBtn" Text="ðŸ” Check Database" BackgroundColor="#FF6B00" TextColor="White" AutomationProperties.Name="Check database integrity" />

                    <Label x:Name="StatusLbl" Text="" FontAttributes="Italic" FontSize="12" TextColor="#666" AutomationProperties.Name="Status message" />
                    
                </VerticalStackLayout>
            </ScrollView>
        </Border>

        <!-- Left: search + list -->
        <Border 
            Grid.Row="1" 
            StrokeShape="RoundRectangle 12" 
            Padding="12"
            BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1A1A1A}"
            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
            StrokeThickness="1"
            AutomationProperties.Name="Teams list panel">
            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="8">
                <Entry x:Name="SearchEntry" Placeholder="Search teams..." AutomationProperties.Name="Search teams" />

                <!-- SHOW ALL SEASONS -->
                <HorizontalStackLayout Grid.Row="1" Spacing="8" Padding="4,0">
                    <CheckBox x:Name="ShowAllSeasonsCheck" AutomationProperties.Name="Show teams from all seasons" />
                    <Label Text="Show all seasons" VerticalOptions="Center" FontSize="14">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnShowAllSeasonsTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

                <CollectionView 
                    x:Name="TeamsList" 
                    Grid.Row="2"
                    SelectionMode="Single"
                    VerticalScrollBarVisibility="Always"
                    AutomationProperties.Name="Teams list">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="8"
                                Margin="0,0,0,4"
                                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2A2A2A}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 8">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                    <Label 
                                        Text="{Binding Name}" 
                                        FontSize="14" 
                                        FontAttributes="Bold"
                                        VerticalOptions="Center" />
                                    <Label 
                                        Grid.Column="1" 
                                        FontSize="12" 
                                        TextColor="#666"
                                        VerticalOptions="Center">
                                        <Label.Text>
                                            <MultiBinding StringFormat="{}{0} â€¢ {1}">
                                                <Binding Path="VenueName" />
                                                <Binding Path="TableLabel" />
                                            </MultiBinding>
                                        </Label.Text>
                                    </Label>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Border>

        <!-- Right: Head-to-Head Match Results + Team Players -->
        <Border 
            Grid.Row="1" 
            Grid.Column="1"
            StrokeShape="RoundRectangle 12" 
            Padding="12"
            BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1A1A1A}"
            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
            StrokeThickness="1"
            AutomationProperties.Name="Team details and head-to-head panel">
            <ScrollView>
                <VerticalStackLayout Spacing="12">
                
                    <!-- Team Info Header -->
                    <VerticalStackLayout x:Name="TeamInfoPanel" IsVisible="False" Spacing="4" AutomationProperties.Name="Selected team info">
                        <Label x:Name="SelectedTeamName" FontSize="18" FontAttributes="Bold" />
                        <Label x:Name="SelectedTeamDivision" FontSize="14" TextColor="#666" />
                        <Label x:Name="SelectedTeamStats" FontSize="12" TextColor="#666" />
                    </VerticalStackLayout>

                    <!-- Filter Controls -->
                    <HorizontalStackLayout x:Name="FilterPanel" IsVisible="False" Spacing="8">
                        <Label Text="Season:" VerticalOptions="Center" FontSize="12" />
                        <Picker x:Name="H2HSeasonPicker" 
                                WidthRequest="150" 
                                FontSize="12"
                                ItemDisplayBinding="{Binding Name}"
                                AutomationProperties.Name="Filter by season" />
                    </HorizontalStackLayout>

                    <!-- Empty State -->
                    <VerticalStackLayout 
                        x:Name="EmptyStatePanel"
                        Spacing="12"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="20"
                        AutomationProperties.Name="No team selected">
                        <Label 
                            Text="ðŸ‘ˆ Select a team"
                            FontSize="16"
                            TextColor="#999"
                            HorizontalOptions="Center" />
                        <Label 
                            Text="View head-to-head match results against opponents"
                            FontSize="12"
                            TextColor="#999"
                            HorizontalOptions="Center" />
                    </VerticalStackLayout>

                    <!-- Head-to-Head Results Section -->
                    <VerticalStackLayout x:Name="H2HSection" IsVisible="False" Spacing="8">
                        <Label Text="ðŸ“Š Head-to-Head Results" FontSize="16" FontAttributes="Bold" />
                        
                        <CollectionView 
                            x:Name="H2HList"
                            SelectionMode="None"
                            AutomationProperties.Name="Head-to-head results">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,8"
                                        Padding="12"
                                        BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2A2A2A}"
                                        StrokeThickness="1"
                                        Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
                                        StrokeShape="RoundRectangle 8">
                                        <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                            
                                            <!-- Opponent Name and Overall Record -->
                                            <Grid ColumnDefinitions="*,Auto">
                                                <Label 
                                                    Text="{Binding OpponentName}"
                                                    FontSize="16"
                                                    FontAttributes="Bold"
                                                    VerticalOptions="Center" />
                                                <Border 
                                                    Grid.Column="1"
                                                    Padding="8,4"
                                                    BackgroundColor="{Binding RecordColor}"
                                                    StrokeThickness="0"
                                                    StrokeShape="RoundRectangle 4">
                                                    <Label 
                                                        Text="{Binding RecordText}"
                                                        FontSize="14"
                                                        FontAttributes="Bold"
                                                        TextColor="White" />
                                                </Border>
                                            </Grid>

                                            <!-- Statistics -->
                                            <Grid Grid.Row="1" ColumnDefinitions="*,*,*,*" ColumnSpacing="8">
                                                <VerticalStackLayout Spacing="2">
                                                    <Label Text="Matches" FontSize="10" TextColor="#666" HorizontalOptions="Center" />
                                                    <Label Text="{Binding TotalMatches}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                                <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                    <Label Text="Win %" FontSize="10" TextColor="#666" HorizontalOptions="Center" />
                                                    <Label Text="{Binding WinPercentage, StringFormat='{0:0}%'}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                                <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                    <Label Text="Frames" FontSize="10" TextColor="#666" HorizontalOptions="Center" />
                                                    <Label Text="{Binding FrameRecord}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                                <VerticalStackLayout Grid.Column="3" Spacing="2">
                                                    <Label Text="Points" FontSize="10" TextColor="#666" HorizontalOptions="Center" />
                                                    <Label Text="{Binding PointsRecord}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                            </Grid>

                                            <!-- Season Breakdown (if multiple seasons) -->
                                            <CollectionView 
                                                Grid.Row="2"
                                                ItemsSource="{Binding SeasonBreakdown}"
                                                IsVisible="{Binding HasMultipleSeasons}">
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,2" Padding="8,4" BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1A1A1A}">
                                                            <Label Text="{Binding SeasonName}" FontSize="11" TextColor="#666" VerticalOptions="Center" />
                                                            <Label Grid.Column="1" Text="{Binding MatchRecord}" FontSize="11" FontAttributes="Bold" VerticalOptions="Center" Margin="0,0,8,0" />
                                                            <Label Grid.Column="2" Text="{Binding FrameRecord}" FontSize="10" TextColor="#666" VerticalOptions="Center" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!-- Team Players Section -->
                    <VerticalStackLayout x:Name="TeamPlayersSection" IsVisible="False" Spacing="8">
                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#E0E0E0, Dark=#333333}" Margin="0,8" />
                        
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="ðŸ‘¥ Team Players" FontSize="16" FontAttributes="Bold" VerticalOptions="Center" />
                            <Label x:Name="TeamPlayersCountLabel" Grid.Column="1" FontSize="12" TextColor="#666" VerticalOptions="Center" />
                        </Grid>
                        
                        <CollectionView 
                            x:Name="TeamPlayersList"
                            SelectionMode="None"
                            AutomationProperties.Name="Team players list">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,4"
                                        Padding="10,8"
                                        BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2A2A2A}"
                                        StrokeThickness="1"
                                        Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
                                        StrokeShape="RoundRectangle 6">
                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" ColumnSpacing="10">
                                            
                                            <!-- Position/Rank -->
                                            <Border 
                                                WidthRequest="28"
                                                HeightRequest="28"
                                                BackgroundColor="{Binding RankColor}"
                                                StrokeThickness="0"
                                                StrokeShape="RoundRectangle 14">
                                                <Label 
                                                    Text="{Binding RankDisplay}"
                                                    FontSize="11"
                                                    FontAttributes="Bold"
                                                    TextColor="White"
                                                    HorizontalOptions="Center"
                                                    VerticalOptions="Center" />
                                            </Border>
                                            
                                            <!-- Player Name -->
                                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                                <Label 
                                                    Text="{Binding PlayerName}"
                                                    FontSize="14"
                                                    FontAttributes="Bold"
                                                    LineBreakMode="TailTruncation" />
                                                <Label 
                                                    Text="{Binding CaptainLabel}"
                                                    FontSize="10"
                                                    TextColor="#F59E0B"
                                                    IsVisible="{Binding IsCaptain}" />
                                            </VerticalStackLayout>
                                            
                                            <!-- Played -->
                                            <VerticalStackLayout Grid.Column="2" Spacing="2" WidthRequest="45">
                                                <Label Text="Played" FontSize="9" TextColor="#666" HorizontalOptions="Center" />
                                                <Label Text="{Binding Played}" FontSize="12" FontAttributes="Bold" HorizontalOptions="Center" />
                                            </VerticalStackLayout>
                                            
                                            <!-- Win % -->
                                            <VerticalStackLayout Grid.Column="3" Spacing="2" WidthRequest="45">
                                                <Label Text="Win%" FontSize="9" TextColor="#666" HorizontalOptions="Center" />
                                                <Label Text="{Binding WinPercentageDisplay}" FontSize="12" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{Binding WinPercentageColor}" />
                                            </VerticalStackLayout>
                                            
                                            <!-- Rating -->
                                            <VerticalStackLayout Grid.Column="4" Spacing="2" WidthRequest="50">
                                                <Label Text="Rating" FontSize="9" TextColor="#666" HorizontalOptions="Center" />
                                                <Label Text="{Binding Rating}" FontSize="12" FontAttributes="Bold" HorizontalOptions="Center" />
                                            </VerticalStackLayout>
                                            
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>
        </Border>
    </Grid>
</ContentPage>
