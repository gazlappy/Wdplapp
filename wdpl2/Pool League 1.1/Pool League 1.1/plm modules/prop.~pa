  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  PropertiesForm: TPropertiesForm;

implementation

uses Main;

{$R *.DFM}

procedure TPropertiesForm.LeagueBeforeOpen(DataSet: TDataset);
begin
  League.Open;
end;

procedure TPropertiesForm.LeagueNewRecord(DataSet: TDataset);
begin
  League.Edit;
end;

procedure TPropertiesForm.FormCreate(Sender: TObject);
begin
  League.Open;
end;

procedure TPropertiesForm.OKBtnClick(Sender: TObject);
begin
  if League.State in [dsEdit, dsInsert] then League.Post;
  Close;
end;

procedure TPropertiesForm.CancelBtnClick(Sender: TObject);
begin
  League.Cancel;
  Close;
end;


procedure TPropertiesForm.FormClose(Sender: TObject;
  var Action: TCloseAction);
begin
  Action := caFree;
end;

procedure TPropertiesForm.LeagueBeforePost(DataSet: TDataSet);
begin
  LeagueUpdateRequired.Value := True;
end;

procedure TPropertiesForm.LeagueAfterPost(DataSet: TDataSet);
begin
  League.Close;
end;

end.
