{$R *.DFM}

procedure TTableReport.TitleBand1BeforePrint(Sender: TQRCustomBand;
  var PrintBand: Boolean);
begin
  Division.Open;
  if Division.FindKey([TeamQueryDivision.Value]) then
    QRLabel3.Caption := DivisionFullDivisionName.Value;
  LeagueFile.Open;
  LeagueFile.First;
end;

end.
