      BandPrinted: Boolean);
  private

  public

  end;

var
  DoublesReport: TDoublesReport;
  NoPrinted: Integer;

implementation

{$R *.DFM}

procedure TDoublesReport.PageHeaderBand1BeforePrint(Sender: TQRCustomBand;
  var PrintBand: Boolean);
begin
  NoPrinted := 0;
  PairQuery.Close;
  PairQuery.Open;
  PairQuery.First;
  Team.Open;
  Team.FindKey([PairQueryPlayerTeam.Value]);
  Division.Open;
  Division.FindKey([TeamDivision.Value]);
  DivisionLabel.Caption := DivisionFullDivisionName.Value;
  LeagueFile.Open;
  LeagueFile.First;
end;

procedure TDoublesReport.DetailBand1AfterPrint(Sender: TQRCustomBand;
  BandPrinted: Boolean);
begin
NoPrinted := NoPrinted + 1;
if NoPrinted >= LeagueFileShowTop.Value then
  PairQuery.Last;
end;

end.
